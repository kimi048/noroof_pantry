<div class="container">
  <h2>Editing a member profile</h2>
  <h2>this is id#<%= @food.id %></h2>
  <%= form_for(@food, url:{controller:'foods', action:'update'}) do |form| %>
    <div class="form-group">
      <label for="username">Username</label>
      <%= form.text_area :description, {class:"form-control", placeholder:"xxx cal"} %>
      <label for="image">Image</label>
      <%= form.file_field :image %>
      <br>
    <%= form.submit "アップデート" ,class:"btn btn-primary" %>
    </div>
  <% end %>
  
  
</div>