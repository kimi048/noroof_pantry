<div class="container">
  <h2>Adding new member</h2>
  <%= form_for(@food, url:{controller:'foods', action:'create'}) do |form| %>
    <div class="form-group">
      <label for="username">description</label>
      <%= form.text_field :description,{class:"form-control", placeholder:"username"} %>
      
      <label for="user_id">User-id</label>
      <%= form.text_field :user_id,{class:"form-control", placeholder:"user_id"} %>
      
      <%= form.label :image, 'image' %>
      <%= form.file_field :image %>
    <%= form.submit "作成" , class:"btn btn-primary" %>
    
    </div>
  <% end %>
  
</div>