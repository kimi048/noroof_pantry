<div class="container">
  <h2>Adding new member</h2>
  <%= form_for(@user, url:{controller:'users', action:'create'}) do |form| %>
    <div class="form-group">
      <%= form.label :username, class: "col-2 col-form-label" %>
      <%= form.text_field :username,{class:"form-control", placeholder:"ユーザー名(日本語でも大丈夫です)"} %>
    </div>
    <div class="form-group">
      <%= form.label :email, class: "col-2 col-form-label" %>
      <%= form.text_field :email,{class:"form-control", placeholder:"email"} %>
    </div>
    <div class="form-group">
      <%= form.label :password, class: "col-2 col-form-label" %>
      <%= form.password_field :password, class: "form-control", placeholder: "Choose a password" %>
    </div>
    <%= form.submit "作成" , class:"btn btn-primary" %>
    
  <% end %>
  
</div>