<div class="container">
  <h2>Editing a member profile</h2>
  <h2>this is id#<%= @user.id %></h2>
  <%= form_for(@user, url:{controller:'users', action:'update'}) do |form| %>
    <div class="form-group pt-3">
      <label for="username">Username</label>
      <%= form.text_field :username,{class:"form-control", placeholder:"username"} %>
      
      <label for="email">Email</label>
      <%= form.text_field :email,{class:"form-control", placeholder:"email"} %>
    <%= form.submit "アップデート" ,class:"btn btn-primary" %>
    </div>
  <% end %>
  
  
</div>